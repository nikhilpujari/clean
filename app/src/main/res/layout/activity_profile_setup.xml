<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ash"
    tools:context="com.example.aniksarder.keepclean.UserActivity.ProfileSetupActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="@color/colorToolBar"
        android:id="@+id/setuptoolbar"
        android:elevation="4dp"/>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/setuptoolbar"
    android:scrollbars="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColorHint="@color/deep_ash"
        android:inputType="text"
        android:textSize="20sp"
        android:maxLines="1"
        android:background="@drawable/input_outline"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="15dp" />

    <EditText
        android:id="@+id/userPhNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:textColorHint="@color/deep_ash"
        android:inputType="number"
        android:textSize="20sp"
        android:maxLines="1"
        android:background="@drawable/input_outline"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="15dp" />

    <Button
        android:id="@+id/buttonUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        android:textStyle="bold"
        android:backgroundTint="@color/colorRed"
        android:background="@drawable/rounded_button_transparent"
        android:text=" Save " />

             </LinearLayout>

        </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorButtonBg"
        app:menu="@menu/bottom_menu"
        app:itemIconTint="@color/textColor"
        app:itemTextColor="@color/colorBlack"
        android:visibility="gone"
        />

  </RelativeLayout>


